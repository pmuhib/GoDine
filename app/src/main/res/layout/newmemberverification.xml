<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/memberimg"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="15dp"/>

            <ProgressBar
                android:visibility="gone"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/progressBar" />


        </RelativeLayout>

        <TextView
            android:id="@+id/membername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:textSize="18sp"
            android:layout_marginTop="9dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <LinearLayout
            android:id="@+id/ll_memberStatus"
            android:layout_marginTop="5dp"
            android:background="#47b307"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/txt_validity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VALID MEMBERSHIP"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:textStyle="bold"/>
            <TextView
                android:id="@+id/txt_goodthrough"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VALID MEMBERSHIP"
                android:layout_marginTop="5dp"
                android:textColor="#fff"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Member ID"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MEMBER SINCE"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TODAYS DATE"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="15dp"
                >
                <TextView
                    android:id="@+id/txt_memberid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"/>


                <TextView
                    android:id="@+id/memberSince"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09/14/2016"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/memberdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/10/2017"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/txt_reactivate"
            android:background="#4ab205"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reactivate Now"
            android:textSize="16sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginTop="38dp"/>
    </LinearLayout>

</ScrollView>

